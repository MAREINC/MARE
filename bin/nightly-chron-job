#! /app/bin/node

const http = require( 'http' );

require( 'dotenv' ).load();

console.log(process.env.NIGHTLY_CHRON_URL);

http.get( process.env.NIGHTLY_CHRON_URL, res => {

    res.on( 'data', () => {
        console.log( `chron job: nightly chron job is now running` );
        process.exit();
    });

    res.on( 'error', err => {
        console.error( `chron: error running nightly chron job - ${ err }` );
        process.exit();
    });
});