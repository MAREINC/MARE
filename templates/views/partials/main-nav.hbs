<nav class="main-nav">
	<ul class="main-nav__items">
		{{#each mainNav}}
		<li class="main-nav__item main-nav__item--main">
			{{#if subMenu}}
			<a class="main-nav__link {{#if selected}}main-nav__link--underlined{{/if}}" href="#">{{ title }}</a>
			<ul class="main-nav__items main-nav__items--submenu">
				{{#each subMenu}}
				<li class="main-nav__item main-nav__item--submenu">
					<a class="main-nav__link main-nav__link--submenu" href="{{ href }}">{{ title }}</a>
				</li>
				{{/each}}
			</ul>
			{{else}}
			<a class="main-nav__link" href="{{ href }}">{{ title }}</a>
			{{/if}}
		</li>
		{{/each}}
	</ul>
</nav>