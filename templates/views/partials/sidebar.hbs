<aside class="sidebar">

	<!-- Meet the Children -->
	<aside class="card card--vertical card--small-padding sidebar__card">	
		<img class="card__image" src="../images/temp-children.png" alt="success story image">	
		<span class="card__image-text">
			<a href="/waiting-child-profiles" class="card__image-title card__image-title--large card__image-title--centered">Meet the Children</a>
		</span>
	</aside>

	<!-- Success Story -->
	<aside class="card card--vertical card--small-padding sidebar__card">	
		<img class="card__image" src="{{ randomSuccessStory.imageSidebar }}" alt="success story image">	
		<span class="card__image-text">
			<!-- TODO: limit the content to three lines with a trailing ellipses-->
			<div class="card__image-description">{{{randomSuccessStory.content}}}</div>
			<a href="{{ randomSuccessStory.url }}" class="card__image-title card__image-title--right-aligned">{{ randomSuccessStory.heading }}</a>
		</span>
	</aside>

	<!-- Event -->
	<aside class="card card--vertical card--small-padding sidebar__card">
		<img class="card__image" src="{{ randomEvent.imageSidebar }}" alt="event image">
		<span class="card__image-text">
			<!-- TODO: limit the content to three lines with a trailing ellipses -->
			<!-- TODO: do we need the date/time in the description? -->
			<div class="card__image-description">{{{randomEvent.description}}} </div>
			<a href="{{ randomEvent.url }}" class="card__image-title card__image-title--right-aligned">{{ randomEvent.name }}</a>
		</span>
	</aside>

	<!-- Have a question and Donate links -->
	<aside class="links">
		<a href="#" data-url="/forms/have-a-question-form">Have a Question?</a>
		<span class="link-separator">|</span>
		<a class="link" href="#" data-url="/donate">Donate Now</a>		
	</aside>

</aside>
