{{!< default}}
<div class="main">
	<div class="content">
		<div class="content-header">
			<span class="section-title">Meet the Children</span>
			<img class="section-image" src="/dist/img/meet-the-children.png" alt="section-image-placeholder">
		</div>
		<div class="content-body">
			<aside class="sidebar">
				<nav class="section-menu">
					<ul>
						<li><a href="/">Who are the Children?</a></li>
						<li><a href="/">Waiting Child Profiles</a></li>
						<li><a href="/">Search for Children</a></li>
						<li><a href="/">Other Ways to Meet Waiting Children</a></li>
					</ul>
				</nav>
				<section class="donate"></section>
				<aside class="callout">
					<span class="description">"It feels so good to be a family," says Brady, who's getting used to being called "Mommy."</span>
					<img class="callout-image" src="/dist/img/success-story-popout.png" alt="callout-image-placeholder">
					<span class="callout-controls">
						<div class="callout-type">Success Stories</div>
						<div class="callout-title">Meet the Whitney Family</div>
						<div class="learn-more">
							<span>Learn more</span><span class="icon-double-arrow-right">&gt;&gt;</span>
						</div>
					</span>
				</aside>
			</aside>
			<section class="main-column">
				<section class="gallery">
					<div class="page-header">
						<span class="page-header-text">Waiting Child Profiles</span>
					</div>

					<section class="filters-container">
						<div class="media-boxes-drop-down waiting-child-profiles-filter" id="waiting-child-profiles-sort">
							<div class="media-boxes-drop-down-header"><span class="fa fa-sort-desc"></span>Original Order</div>
							<ul class="media-boxes-drop-down-menu" style="display: none;">
								<li><a href="#" data-sort-by="original-order" class="selected">Original Order</a></li>
								<li><a href="#" data-sort-by="name" data-sort-toggle="true">Sort by Name</a></li>
								<li><a href="#" data-sort-by="age" data-sort-toggle="true">Sort by Age</a></li>
								<li><a href="#" data-sort-by="date-added" data-sort-toggle="true">Sort by Date Added</a></li>
							</ul>
						</div>
						<div class="icon-key">
							<span class="icon-text-unit filter">
								<img class="icon-text-unit__icon video" src="/dist/img/video-icon.png">
								<span class="icon-text-unit__text">Video Profile</span>
							</span>
							<span class="icon-text-unit filter">
								<img class="icon-text-unit__icon wednesdays-child" src="/dist/img/wednesdays-child-icon.png">
								<span class="icon-text-unit__text">Wednesday's Child</span>
							</span>
						</div>
					</section>

					<section class="profiles-container">

						<div id="grid" class="profiles">
							{{#each children}}
								<div class="media-box" data-registration-number="{{ registrationNumber }}">
									<div class="profile">
										<div class="media-box-image">
											<div data-thumbnail={{ galleryImage }}></div>
										</div>

										<div class="media-box-content details">
											<div class="media-box-name name">{{ name.first }}</div>
											<div class="media-box-age hidden">{{ ageConverted }}</div>
											<div class="media-box-date-added hidden">{{ registrationDateConverted }}</div>
											<div class="age">Age {{ age }}</div>
											<div class="icons">
											{{#if hasVideoSnapshot}}
												<img class="badge" src="/dist/img/video-icon.png">
											{{/if}}
											{{#if wednesdaysChild}}
												<img class="badge" src="/dist/img/wednesdays-child-icon.png">
											{{/if}}
											</div>
											<div class="view-profile">
												<span>View Profile</span>
												<span class="icon-double-arrow-right">&gt;&gt;</span>
											</div>
										{{#if ../canBookmarkChildren}}
											<span class="bookmark {{#if isBookmarked}}bookmark--active{{/if}}">
												<i class="fa {{#if isBookmarked}} fa-minus-square-o bookmark__icon--active {{else}} fa-plus-square-o {{/if}} bookmark__icon "></i>
												<span class="bookmark__text">Bookmark</span>
											</span>
										{{/if}}
										</div>
									</div>

								</div>
							{{/each}}
						</div>

					</section>
				</section>
				<section class="gallery-search-form hidden">
					<div class="page-header">
						<span class="page-header-text">Search for Children</span>
					</div>
			</section>
		</div>
	</div>
</div>

<script id="child-details-template" type="text/x-handlebars-template">

	<div class="child-details">

		<div class="profile__profile-navigation">
			\{{#if previousChildRegistrationNumber}}
			<span class="profile-navigation__previous" data-registration-number=\{{previousChildRegistrationNumber}}>
				<i class="fa fa-angle-left fa-3x profile-navigation__previous-icon"></i>
				<span class="profile-navigation__previous-text">Previous Child</span>
			</span>
			\{{/if}}
			\{{#if previousChildRegistrationNumber}}
				\{{#if nextChildRegistrationNumber}}
				<span class="profile-navigation__divider">|</span>
				\{{/if}}
			\{{/if}}
			\{{#if nextChildRegistrationNumber}}
			<span class="profile-navigation__next" data-registration-number=\{{nextChildRegistrationNumber}}>
				<span class="profile-navigation__next-text">Next Child</span>
				<i class="fa fa-angle-right fa-3x profile-navigation__next-icon"></i>
			</span>
			\{{/if}}
		</div>

		<div class="profile-tabs">
			<span class="profile-tabs__tab profile-tabs__tab--selected" data-tab="profile">profile</span>
			\{{#if hasVideo}}<span class="profile-tabs__tab" data-tab="video">video</span>\{{/if}}
			\{{#if wednesdaysChild}}<span class="profile-tabs__tab" data-tab="wednesdays-child">wednesday's child</span>\{{/if}}
		</div>

		<div class="profile-tab__contents profile-tab__contents--selected" data-contents="profile">

			<img class="profile__profile-picture" src=\{{ detailImage }}>

			<div class="profile__basic-info">
				<div class="profile-details__name">\{{ name }}</div>
				<div class="profile-details__age">Age \{{ age }}</div>
				<div class="profile-details__registration-number">Registration # \{{ registrationNumber }}</div>
			</div>

			<div class="profile__detailed-child-info">
				<div class="detailed-child-info__introduction">
					<div class="detailed-child-info__header">Hi! My name is \{{ name }}.</div>
				</div>
				<div class="detailed-child-info__part-1">
					<div class="detailed-child-info__header">Let me tell you more about myself...</div>
					<div class="detailed-child-info__body">\{{ profilePart1 }}</div>
				</div>
				<div class="detailed-child-info__part-2">
					<div class="detailed-child-info__header">And hereâ€™s what others say...</div>
					<div class="detailed-child-info__body">\{{ profilePart2 }}</div>
				</div>
				<div class="detailed-child-info__part-3">
					<div class="detailed-child-info__header">If I could have my own special wish...</div>
					<div class="detailed-child-info__body">\{{ profilePart3 }}</div>
				</div>
			</div>

			<div class="detailed-profile__footer">You can help bring me closer to finding "a place to call HOME" by filling out the <a href="/">MARE Information Request Form</a>. They will be glad to help you get more information about me.</div>
		</div>

		\{{#if hasVideo}}
		<div class="profile-tab__contents" data-contents="video">

			<div class="profile__basic-info">
				<div class="profile-details__name">\{{ name }}</div>
				<div class="profile-details__age">Age \{{ age }}</div>
				<div class="profile-details__registration-number">Registration # \{{ registrationNumber }}</div>
			</div>

			<div class="profile-details__video-container">
				<iframe src=\{{video}} frameborder="0" allowfullscreen class="profile-details__video"></iframe>
			</div>

			<div class="detailed-profile__footer">You can help bring me closer to finding "a place to call HOME" by filling out the <a href="/">MARE Information Request Form</a>. They will be glad to help you get more information about me.</div>

		</div>
		\{{/if}}

		\{{#if wednesdaysChild}}
		<div class="profile-tab__contents" data-contents="wednesdays-child">
			<span>Wednesday's Child content will go here</span>
		</div>
		\{{/if}}

	</div>

</script>